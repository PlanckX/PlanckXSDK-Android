<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_judgeBindStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Determine binding status" />

    <Button
        android:id="@+id/btn_players_nft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Query a player's NFT" />

    <Button
        android:id="@+id/btn_games_nft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get all NFT in the game" />

    <Button
        android:id="@+id/btn_token_nft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Query NFT assets by TokenId" />


</LinearLayout>